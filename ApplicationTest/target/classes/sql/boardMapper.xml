<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.koreate.dao.BoardDao">
	<!-- parameterType="net.koreate.vo.BoardVO" -->
	<insert id="create">
		INSERT INTO test_board(title,content,writer)
		VALUES(#{title},#{getContent},#{writer})
	</insert>
	
	<select id="listAll" resultType="boardVo">
		SELECT * FROM test_board
		ORDER BY bno DESC
	</select>
	
	<select id="read" resultType="boardVo">
		SELECT * FROM test_board
		WHERE bno = #{bno}
	</select>
	
	<update id="modify">
		UPDATE test_board SET 
		title=#{title},
		content = #{content},
		writer = #{writer}
		WHERE bno = #{bno}
	</update>
	
	<delete id="delete">
		DELETE FROM test_board WHERE bno = #{bno}
	</delete>
	
	<select id="listPage" resultType="boardVO">
	SELECT * FROM test_board
	ORDER BY bno DESC 
	limit #{currentPage}, #{perPageNum}	
	</select>
	
	<select id="totalCount" resultType="int">
		SELECT count(*) FROM test_board;
	</select>
</mapper>
